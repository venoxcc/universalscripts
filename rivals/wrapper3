local LibWrapper = {}

-- Load Rayfield library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

function LibWrapper:CreateWindow(name)
    local window = Rayfield:CreateWindow({
        Name = name,
        Icon = 0, -- No icon
        LoadingTitle = name,
        LoadingSubtitle = "by benomat",
        ConfigurationSaving = {Enabled = true, FolderName = "YourFolder", FileName = "YourFile"},
        Discord = {Enabled = false},
        KeySystem = false
    })
    
    local windowWrapper = {}

    function windowWrapper:CreateTab(tabName)
        local tab = window:CreateTab(tabName) -- No icon
        
        local tabWrapper = {}

        function tabWrapper:CreateButton(name, callback)
            local button = tab:CreateButton({
                Name = name,
                Callback = callback
            })
            return button
        end

        function tabWrapper:CreateToggle(name, defaultValue, callback)
            local toggle = tab:CreateToggle({
                Name = name,
                CurrentValue = defaultValue,
                Callback = callback
            })
            return toggle
        end

        function tabWrapper:CreateSlider(name, min, max, increment, suffix, defaultValue, callback)
            local slider = tab:CreateSlider({
                Name = name,
                Range = {min, max},
                Increment = increment,
                Suffix = suffix,
                CurrentValue = defaultValue,
                Callback = callback
            })
            return slider
        end

        function tabWrapper:CreateInput(name, placeholder, removeTextAfterFocusLost, callback)
            local input = tab:CreateInput({
                Name = name,
                PlaceholderText = placeholder,
                RemoveTextAfterFocusLost = removeTextAfterFocusLost,
                Callback = callback
            })
            return input
        end

        function tabWrapper:CreateDropdown(name, options, defaultOption, multipleOptions, callback)
            local dropdown = tab:CreateDropdown({
                Name = name,
                Options = options,
                CurrentOption = defaultOption,
                MultipleOptions = multipleOptions,
                Callback = callback
            })
            return dropdown
        end

        function tabWrapper:CreateKeybind(name, defaultKey, holdToInteract, callback)
            local keybind = tab:CreateKeybind({
                Name = name,
                CurrentKeybind = defaultKey,
                HoldToInteract = holdToInteract,
                Callback = callback
            })
            return keybind
        end

        function tabWrapper:CreateLabel(name)
            local label = tab:CreateLabel(name)
            return label
        end

        function tabWrapper:CreateParagraph(title, content)
            local paragraph = tab:CreateParagraph({
                Title = title,
                Content = content
            })
            return paragraph
        end

        return tabWrapper
    end

    return windowWrapper
end

return LibWrapper
